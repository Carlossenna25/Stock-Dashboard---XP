  mutate(across(where(is.numeric), ~ round(., 2))) %>%
  datatable(
    options = list(
      dom = "lrtip",
      paging = TRUE,
      lengthMenu = c(5, 10, 25),
      pageLength = 10,
      scrollY = TRUE
    )
