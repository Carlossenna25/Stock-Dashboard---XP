{r}
#| content: valuebox
#| title: "Total Volume"

list(
  icon = "chart-bar",
  color = "primary",
  value = scales::comma(total_volume)
)

'''{r}
{r}
#| content: valuebox
#| title: "Average Daily Change"

list(
  icon = "exchange-alt",
  color = "info",
  value = scales::dollar(daily_change, accuracy = 0.01)
)

'''{r}
{r}
#| content: valuebox
#| title: "Period Volatility"

list(
  icon = "bolt",
  color = "warning",
  value = scales::percent(volatility / mean(combined$Close, na.rm = TRUE), accuracy = 0.1)
)

## Row {height="40%"}

### Column {width="40%"}

{r} 
dividend_list <- lapply(symbols, function(sym) {
  getDividends(sym, from = "2023-01-01", to = Sys.Date(), auto.assign = FALSE)
})

dividend_data <- do.call(rbind, lapply(seq_along(dividend_list), function(i) {
  data.frame(
    date = index(dividend_list[[i]]),
    dividend = coredata(dividend_list[[i]]),
    symbol = symbols[i]
  )
}))

{r} 
dividend_summary <- dividend_data %>%
  group_by(symbol) %>%
  summarise(total_dividend = sum(dividend, na.rm = TRUE)) %>%
  mutate(p = total_dividend / sum(total_dividend))

{r} 
dividend_table <- dividend_summary %>%
  gt() %>%
  fmt_percent(
    columns = p,
    decimals = 1
  ) %>%
  tab_style(
    style = cell_text(color = "#ae8b2d", weight = "bold"),
    locations = cells_body(
      columns = everything(),
      rows = symbol == "BBDC4.SA"
    )
  ) %>%
  tab_style(
    style = cell_text(color = "#0e2635", weight = "bold"),
    locations = cells_body(
      columns = everything(),
      rows = symbol == "ITSA4.SA"
    )
  ) %>%
  tab_style(
    style = cell_text(color = "#4CAF50", weight = "bold"),
    locations = cells_body(
      columns = everything(),
      rows = symbol == "ITUB4.SA"
    )
  ) %>%
  cols_label(
    symbol = "",
    total_dividend = "Total Dividend",
    p = "Proportion of Dividends"
  )

{r} 
# Exibir a tabela 
dividend_table
